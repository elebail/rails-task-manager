<h1>Tasks</h1>
  <% @tasks.each do |task| %>
      <h3><% if task.completed %>
      ☑︎<%= link_to task.title, task_path(task) %> -
    <% else %>
       ☐<%= link_to task.title, task_path(task) %> -
    <% end %>
    <%= link_to "🗑", task_path(task),
      method: :delete,
      data: { confirm: "Delete #{task.title}?" } %>
      </h3>
  <% end %>


<%= link_to "✚ Add a new task", new_path %>
